{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="container mx-auto p-6 max-w-2xl">
    <h1 class="text-3xl font-bold mb-6">Profil</h1>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-bold mb-4">Informations de l'utilisateur</h2>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">Nom d'utilisateur:</label>
            <p class="text-gray-900">username{#{{ user.username }}#}</p>
        </div>
        
        <div class="flex justify-end">
            <a href="{{ path('app_profile') }}" class="bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Modifier
            </a>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Mes Collections</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            collections{#{% for collection in user.collections %}#}
            <div class="bg-gray-100 shadow-sm rounded-lg p-4">
                <h3 class="text-xl font-bold">name{#{{ collection.name }}#}</h3>
                <p class="text-gray-600">description{#{{ collection.description }}#}</p>
                <a href={#}"{{ path('app_collection_show', { 'id': collection.id }) }}"#} class="mt-4 inline-block text-blue-500 hover:text-blue-700">Voir la collection</a>
            </div>
            {#{% else %}#}
            <p class="text-gray-600">Vous n'avez aucune collection.</p>
            {#{% endfor %}#}
        </div>
    </div>
</div>
{% endblock %}
