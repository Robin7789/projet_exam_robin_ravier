{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-3xl">
            <h1 class="text-2xl font-bold mb-4">Games</h1>
            <ul class="space-y-4 mb-4">
                {% for game in games %}
                    <li class="p-4 border rounded-md shadow-sm bg-gray-50">
                        <span class="font-bold">{{ game.title }}</span> - {{ game.genre }} - {{ game.platform }}
                    </li>
                {% endfor %}
            </ul>
            <a href="{{ path('app_game_new') }}" class="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Add New Game
            </a>
        </div>
    </div>
{% endblock %}
