{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-3xl">
            <h1 class="text-2xl font-bold mb-4">Search</h1>
            <form method="get" action="{{ path('app_search') }}" class="mb-4">
                <div class="flex items-center">
                    <input type="text" name="q" value="{{ app.request.query.get('q') }}"
                           class="flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <button type="submit" class="ml-4 bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Search
                    </button>
                </div>
            </form>

            <ul class="space-y-4">
                {% for game in pagination.items %}
                    <li class="p-4 border rounded-md shadow-sm bg-gray-50">
                        <span class="font-bold">{{ game.title }}</span> - {{ game.genre }} - {{ game.platform }}
                    </li>
                {% endfor %}
            </ul>

            <div class="mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
